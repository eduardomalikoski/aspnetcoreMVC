@model aspnetcoreMVC.Models.Funcionario
<h2>Cadastro de funcionarios</h2>

<form class="form-horizontal" asp-area="" asp-controller="Funcionarios" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id">
    <input type="text" class="form-control" asp-for="Nome" placeholder="Nome">
    <input type="number" class="form-control" asp-for="Salario" placeholder="Salario">
    <input type="text" class="form-control" asp-for="Cpf" placeholder="Cpf">
    <button class="btn btn-success">Cadastrar</button>
</form>